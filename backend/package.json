{
  "name": "crosscode_map_editor",
  "version": "0.1.0",
  "description": "edit stuff",
  "type": "module",
  "scripts": {
    "start": "npm run serve",
    "startWithCommon": "cd ../common && npm run build && cd ../backend && npm start",
    "lint": "eslint src/**/*.ts",
    "build": "tsc && npm run lint",
    "watch": "tsc -w",
    "serve": "nodemon -e ts --watch src --watch ../common --exec \"npm run build && node dist/server.js\"",
    "debug": "nodemon -e ts --watch src --watch ../common --exec \"npm run build && node --inspect dist/server.js\""
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "cc-map-editor-common": "../common",
    "cors": "^2.8.5",
    "errorhandler": "^1.5.1",
    "express": "^4.18.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/body-parser": "^1.19.2",
    "@types/cors": "^2.8.13",
    "@types/errorhandler": "1.5.0",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.16.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "nodemon": "^2.0.22",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.45.0"
  }
}
